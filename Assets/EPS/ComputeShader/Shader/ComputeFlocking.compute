RWStructuredBuffer<BoidData> _Boids;
RWStructuredBuffer<BoidOutputData> _Output;
Texture2D<float4> _SDF;
SamplerState sampler_SDF;
float _TimeStep;
float _MaxSpeed;

//data from computeflocker.cs
float3 _SACWeight;
float3 _SACRange;
float _SDFWeight;
float3 _BoxMin;
float3 _BoxMax;
